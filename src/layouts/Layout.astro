---
interface Props {
	title: string;
	description: string;
}
import "@styles/global.css";

const { title, description } = Astro.props;

---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<meta name="description" content={description} />
		<title>{title}</title>

		<!-- Script inline para evitar flash de tema incorrecto (FOUC) -->
		<script is:inline>
			// Este script se ejecuta de forma sÃ­ncrona antes de renderizar el body
			(function() {
				const getTheme = () => {
					const saved = localStorage.getItem('theme-preference');
					if (saved) return saved;
					return window.matchMedia('(prefers-color-scheme: light)').matches ? 'light' : 'dark';
				};
				
				const theme = getTheme();
				document.documentElement.classList.add(theme);
				document.documentElement.setAttribute('data-theme', theme);
			})();
		</script>

		<!-- Fonts -->
		 <link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400..900&family=Space+Grotesk:wght@300..700&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		color-scheme: light dark;
		
		/*Fonts*/
		--primary-font: 'Orbitron', sans-serif;
		--secondary-font: 'Space Grotesk', sans-serif;
	}

	/* Tema oscuro por defecto */
	:root,
	:root.dark {
		--bg: #0a0a0a;
		--text: #ffffff;
		--text60: #ffffff60;
		--gold: #FFD700;
		--gold25: #ffd70040;
		--gold-alt: #FFA500;
	}

	/* Tema claro */
	:root.light {
		--bg: #ffffff;
		--text: #0a0a0a;
		--text60: #0a0a0a60;
		--gold: #DAA520;
		--gold25: #DAA52040;
		--gold-alt: #FF8C00;
	}
	
	html { 
		font-size: 16px; 
		scroll-behavior: smooth; 
		scrollbar-width: thin; 
		scrollbar-color: var(--gold) var(--bg);
	}
	
	body {
		font-family: var(--secondary-font);
		min-height: 100vh;
		max-width: 1920px;
		margin: 0 auto;
		background: radial-gradient(ellipse 80% 60% at 50% 0%, var(--gold25), transparent 70%), var(--bg);
		color: var(--text);
	}

	*::selection {
		background-color: var(--gold);
		color: var(--bg);
	}

	@media (prefers-reduced-motion: reduce) {
		* { 
			animation-duration: 0.01ms !important; 
			animation-iteration-count: 1 !important; 
			transition-duration: 0.01ms !important; 
			scroll-behavior: auto !important;
			transition: none; 
		}
	}
</style>
